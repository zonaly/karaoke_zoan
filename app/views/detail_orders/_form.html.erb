<%= simple_form_for @detail_order, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :order %> 
  <%= error_span(@detail_order [:order]) %>  
  <%= f.association :product %> 
  <%= error_span(@detail_order [:product]) %>  
  <%= f.association :song %> 
  <%= error_span(@detail_order [:song]) %>   
  <%= f.input :cntProd %>
  <%= error_span(@detail_order[:cntProd]) %>
  <%= f.input :subtotal %>
  <%= error_span(@detail_order[:subtotal]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                detail_orders_path, :class => 'btn btn-default' %>
<% end %>
