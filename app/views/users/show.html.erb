<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nomUser) %>:</strong></dt>
  <dd><%= @user.nomUser %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apUser) %>:</strong></dt>
  <dd><%= @user.apUser %></dd>
  <dt><strong><%= model_class.human_attribute_name(:feReg) %>:</strong></dt>
  <dd><%= @user.feReg %></dd>
  <dt><strong><%= model_class.human_attribute_name(:feNac) %>:</strong></dt>
  <dd><%= @user.feNac %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clave) %>:</strong></dt>
  <dd><%= @user.clave %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
