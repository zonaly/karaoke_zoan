<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nomE) %>:</strong></dt>
  <dd><%= @employee.nomE %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apEm) %>:</strong></dt>
  <dd><%= @employee.apEm %></dd>
  <dt><strong><%= model_class.human_attribute_name(:numDni) %>:</strong></dt>
  <dd><%= @employee.numDni %></dd>
  <dt><strong><%= model_class.human_attribute_name(:direc) %>:</strong></dt>
  <dd><%= @employee.direc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:numtef) %>:</strong></dt>
  <dd><%= @employee.numtef %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fenac) %>:</strong></dt>
  <dd><%= @employee.fenac %></dd>
  <dt><strong><%= model_class.human_attribute_name(:local_id) %>:</strong></dt>
  <dd><%= @employee.local_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              employees_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employee_path(@employee), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employee_path(@employee),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
