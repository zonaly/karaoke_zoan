<%- model_class = DetailVoucher -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:voucher_id) %></th>
      <th><%= model_class.human_attribute_name(:detail_order_id) %></th>
      <th><%= model_class.human_attribute_name(:cantProd) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @detail_vouchers.each do |detail_voucher| %>
      <tr>
        <td><%= link_to detail_voucher.id, detail_voucher_path(detail_voucher) %></td>
        <td><%= detail_voucher.voucher_id %></td>
        <td><%= detail_voucher.detail_order_id %></td>
        <td><%= detail_voucher.cantProd %></td>
        <td><%=l detail_voucher.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_detail_voucher_path(detail_voucher), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      detail_voucher_path(detail_voucher),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_detail_voucher_path,
            :class => 'btn btn-primary' %>
