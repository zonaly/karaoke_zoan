<%= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@event[:name]) %>
  <%= f.input :description %>
  <%= error_span(@event[:description]) %>
  <%= f.association :local %> 
  <%= error_span(@event[:local]) %>  
  <%= f.association :district %>  
  <%= error_span(@event[:district]) %>
  <%= f.input :availability %>
  <%= error_span(@event[:availability]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn btn-default' %>
<% end %>
